<Project Sdk="Microsoft.NET.Sdk">

	<!-- MSBuild project settings -->
	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<OutputType>WinExe</OutputType>
		<PublishReadyToRun>false</PublishReadyToRun>
		<TieredCompilation>false</TieredCompilation>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<RootNamespace>RefreshTest</RootNamespace>
		<AssemblyName>RefreshTest</AssemblyName>
	</PropertyGroup>

	<!-- Custom project settings -->
	<PropertyGroup>
		<EnableAnalyzers>false</EnableAnalyzers>
		<IncludeAnalyzersStyleCop>false</IncludeAnalyzersStyleCop>
	</PropertyGroup>

	<!-- Project references -->
	<ItemGroup>
		<ProjectReference Include="..\..\production\Katabasis\Katabasis.csproj" />
	</ItemGroup>

	<!-- Assets -->
	<ItemGroup>
		<None Update="assets/**/*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
